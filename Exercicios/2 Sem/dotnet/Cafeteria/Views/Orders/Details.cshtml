@model Cafeteria.Models.OrderDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order Number  @Html.DisplayFor(model => model.Order.Id)</h4>
    <h5>Order placed on @Html.DisplayFor(model => model.Order.TimeStamp)</h5>
    <hr />
    <h5>Order Items</h5>

    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ItemsOfOrder)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.Display(item.Category)</td>
                    <td>@Html.DisplayForModel(item.Quantity)</td>
                    <td>@Html.DisplayForModel(item.Price)</td>
                    <td>@Html.DisplayForModel(item.SubTotal)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Order.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
